<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SETTING"
                    android:gravity="center"
                    android:textColor="#FF8000"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgo"
                    android:textSize="15pt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:src="@drawable/user"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:text="땡전한푼"
                        android:textSize="10pt"
                        android:fontFamily="@font/nanumgo"
                        android:gravity="top|center"/>
                    <Button
                        android:id="@+id/select_pic"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="땡전 선택"
                        android:background="#F7B80C"
                        android:fontFamily="@font/nanumgo"
                        android:layout_gravity="center"
                        android:onClick="takealbum"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="닉네임 수정"
                    android:textColor="#FF8000"
                    android:textSize="8pt"
                    android:fontFamily="@font/nanumgo"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/editname"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:inputType="text"
                    android:fontFamily="@font/nanumgo"
                    android:hint="수정할 닉네임 입력"/>

                <Switch
                    android:id="@+id/pushswicth"
                    android:text="푸시 알림 설정"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:checked="true"
                    android:textOn="on"
                    android:textOff="off"
                    android:textSize="8pt"
                    android:textColor="#FF8000"
                    android:typeface="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/set_fin"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="완료"
                    android:textStyle="bold"
                    android:background="#F7B80C"
                    android:fontFamily="@font/nanumgo"
                    android:layout_weight="1"/>
               <!-- <Button
                    android:id="@+id/mem_drop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="회원 탈퇴"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanumgo"
                    android:layout_weight="1"/>-->

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>