<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/content_main_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity_home"
    tools:showIn="@layout/app_bar_main_activity_home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "horizontal"
                android:layout_weight="7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5sp"
                    android:text="전체"
                    android:textSize="9pt"
                    android:drawableLeft="@drawable/iseoulu"
                    android:background="#FBF8EF"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/arita"
                    android:onClick="total_click"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "horizontal"
                android:layout_weight="6"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:text="공연 ˙ 전시"
                    android:fontFamily="@font/arita"
                    android:textSize="9pt"
                    android:background="@drawable/festival"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:onClick="performance_click"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="행사 ˙ 체험"
                    android:fontFamily="@font/arita"
                    android:background="@drawable/coke"
                    android:textColor="#FFFFFF"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:onClick="experience_click"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "horizontal"
                android:layout_weight="6"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="영화"
                    android:fontFamily="@font/arita"
                    android:background="@drawable/freemovie"
                    android:textColor="#FFFFFF"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:onClick="movie_click"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/clas"
                    android:text="문화교양 ˙ 강좌"
                    android:fontFamily="@font/arita"
                    android:textColor="#FFFFFF"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:onClick="culture_click"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "horizontal"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageButton
                    android:id="@+id/BTleft"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:paddingTop="35sp"
                    android:paddingBottom="35sp"
                    android:paddingRight="5sp"
                    android:paddingLeft="5sp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/left" />

                <Button
                    android:id="@+id/BTchoose"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/h_baby"
                    android:text="  아이와 함께"
                    android:textSize="20dp"
                    android:fontFamily="@font/arita"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:onClick="withclick"/>

                <ImageButton
                    android:id="@+id/BTright"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:paddingTop="35sp"
                    android:paddingBottom="35sp"
                    android:paddingRight="5sp"
                    android:paddingLeft="5sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "horizontal"
                android:layout_weight="7"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/home"
                    android:background="#FCE295"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/arita"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="HOME"/>
                <Button
                    android:id="@+id/COMMU"
                    android:background="#FCE295"
                    android:layout_marginLeft="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/arita"
                    android:text="COMMUNITY"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="commu_click"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>